{
    "compilerOptions": {     
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "allowUmdGlobalAccess": true,
      "declaration": true,      
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,      
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "node_modules/@types",
        "./src/types"
      ]
    },
    "exclude": ["node_modules", "__tests__", "dist"]
  }